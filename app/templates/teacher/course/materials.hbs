<div class="row content">
    <div class="col-xs-10 section-header">Class Materials</div>
    <div class="col-xs-2"><button class="circle-button sub" {{action 'showAddModal'}}><span class="glyphicon glyphicon-plus"></span></button></div>
  {{#if model.materials}}
    {{#each model.materials as |material|}}
        <a target="_blank" href="{{material.filename}}">
            <div class="col-xs-12 section-content">

                <div class="post-avatar">
                    <span class="glyphicon glyphicon-download download-icon"></span>
                </div>

                <div class="post-content">
                  {{material.title}}<br/>
                    <p>{{material.description}}</p>
                    <p>uploaded by {{material.user.name}}<br/>
                        <br/>
                        last updated: {{material.updated_at}}</p>
                </div>
            </div>
        </a>
    {{/each}}
  {{else}}
      <div class="col-xs-12 section-content">
          <div class="post-content">
              No material
          </div>
      </div>
  {{/if}}
</div>

<!-- Modal -->
<div class="modal fade" id="add-material" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add a new material</h4>
            </div>
            <div class="modal-body">
              {{#if modal_error}}
                  <div class="alert alert-danger">
                    {{modal_error}}
                  </div>
              {{/if}}

                <form>
                    <div class="form-group">
                        <label for="title">Title:</label>
                      {{input name="title" id="title" value=title class="form-control"}}
                    </div>
                    <div class="form-group">
                        <label for="description">Short Description:</label>
                      {{input name="description" id="description" value=description class="form-control"}}
                    </div>
                    <div class="form-group">
                        <label for="filename">URL of the file for this material:</label>
                      {{input name="filename" id="filename" value=filename class="form-control"}}
                        You have to upload your file to other file service for now.
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" {{action 'post_new'}}>Post</button>
            </div>
        </div>
    </div>
</div>